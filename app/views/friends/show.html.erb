<div class="card">
  <div class="card-header">
    <h2 class="display-4">
        <%= @friend.first_name%>
        <%= @friend.last_name%>
    </h2>
  </div>
  <div class="card-body">
    <p class="card-text">
        <strong>Email:</strong>
        <%= @friend.email%>
    </p>
    <p class="card-text">
        <strong>Phone:</strong>
        <%= @friend.phone%>
    </p>
    <p class="card-text">
        <strong>Twitter:</strong>
        <%= @friend.twitter%>
    </p>
    <div class="d-inline-flex gap-1">
        <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary"%>
        <%= button_to "Destroy", @friend, method: :delete, class:"btn btn-secondary btn-danger"%>
        <%= link_to "Back", friends_path, class:"btn btn-secondary" %>
    </div>
  </div>
</div>
