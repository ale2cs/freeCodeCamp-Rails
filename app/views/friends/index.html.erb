<% if user_signed_in? %>
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Twitter</th>
        </tr>
        </thead>
        <tbody>
        <% @friends.each do |friend| %>
        <tr class="text-center">
            <% if friend.user == current_user %>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"link-underline link-underline-opacity-0" %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <% end %>
        </tr>
        <% end %>
        </tbody>
    </table>
    <br />
    <%= link_to "New friend", new_friend_path, class:"btn btn-dark" %>
<% else %>
  <h1>Hello World!</h1>
  This is my first Rails webpage.
<% end %>